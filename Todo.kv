<TodoCard>
    title: title
    description: description
    #elevation: 10
    #md_bg_color: 1, 1, 1, 1
    #radius: [8]
    #size_hint_y: 1
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {'center_x': .02, 'center_y': .5}
        md_bg_color: 1, 170/255, 23/255, 1
    MDLabel:
        id: title
        text: root.title
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {'center_x': .46, 'center_y': .8}
    MDLabel:
        id: description
        text: root.description
        markup: True
        font_size: '15sp'
        size_hint_x: .9
        line_height: .8
        pos_hint: {'center_x': .51, 'center_y': .4}
    MDIconButton:
        id: icon_delete
        icon: 'delete'
        #size_hint: .02, .03
        pos_hint: {'center_x': .95, 'center_y': .8}
        background_color: 0, 0, 0, 0
        font_size: '18sp'
        color: 0, 0, 1, 1
        on_release:
            app.delete_current_task(*args, title, description, bar)


MDScreen:
    date: date
    todo_list: todo_list
    name: 'main'

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: 'My Tasks'
            font_size: '35sp'
            pos_hint: {'center_x': .56, 'center_y': .95}
        MDLabel:
            id: date
            text: ''
            font_size: '18sp'
            pos_hint: {'center_x': .565, 'center_y': .89}
        MDIconButton:
            icon: 'plus'
            pos_hint: {'center_x': .89, 'center_y': .925}
            user_font_size: '35sp'
            md_bg_color: 1, 170/255, 23/255, 1
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "add_todo"

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .85
            pos_hint: {'center_x': .5, 'y': 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spaccing: 15, 10
            