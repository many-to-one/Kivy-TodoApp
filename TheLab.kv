
<MenuScreen>:

    Button:
        text: 'Go to Settings'
        size: '5dp', '2dp'
        pos: '10dp', '20dp'
        on_press:
            root.manager.current = 'main'
    Image:
        source: 'img/main.png'


<SuccessScreen>:
    Image:
        source: 'img/success.png'
    Label:
        text: 'Success'


<DataResult>:
    name: 'dt'
    MDLabel:
        text: 'Data-Table'
        pos_hint: {'center_x': 0.75, 'center_y': 0.90}
        font_size: 35
    MDRoundFlatButton:
        text: 'Show table'
        on_press: app.get_dt()
    #MDRoundFlatButton:
    #    text: 'Close table'
    #    on_press: app.close_dt()
    AnchorLayout:
        id: anch
        pos_hint: {'center_x': 0.50, 'center_y': 0.50}



<MainWidget>:
    orientation: 'vertical'
    spacing: '20dp'
    padding: [dp(20),dp(10),dp(20),dp(10)]
    minutes: minutes
    visits: visits
    publications: publications
    films: films

    BoxLayout:
        size_hint: 1, .5
        TextInput:
            id: minutes
            size_hint: 1, 1
            font_size: '50dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
        MDLabel:
            pos_hint: {'center_x': 3}
            text: 'MINUTY  ' + str(minutes.text)
            font_size: '20dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
    BoxLayout:
        size_hint: 1, .5
        TextInput:
            id: visits
            size_hint: 1, 1
            font_size: '50dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
        MDLabel:
            pos_hint: {'center_x': 3}
            text: 'ODWIEDZINY  ' + str(visits.text)
            font_size: '20dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
    BoxLayout:
        size_hint: 1, .5
        TextInput:
            id: publications
            size_hint: 1, 1
            font_size: '50dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
        MDLabel:
            pos_hint: {'center_x': 3}
            text: 'PUBLIKACJE  ' + str(publications.text)
            font_size: '20dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
    BoxLayout:
        size_hint: 1, .5
        TextInput:
            id: films
            size_hint: 1, 1
            font_size: '50dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
        MDLabel:
            pos_hint: {'center_x': 3}
            text: "FILMY  " + str(films.text)
            font_size: '20dp'
            multiline: False
            font_name: 'fonts/fruit.ttf'
    Button:
        text: 'ZAPISZ'
        size_hint: 1, None
        height: '75dp'
        font_size: '30dp'
        font_name: 'fonts/fruit.ttf'
        #background_normal: 'img/button_save.png'
        on_press:
            root.manager.current = 'success'
            root.result()




            

