<TodoCard>
    #elevation: 10
    md_bg_color: 1, 1, 1, 1
    radius: [8]
    size_hint_y: .1
    MDFloatLayout:
        id: bar
        size_hint: .01, .9
        pos_hint: {'center_x': .02, 'center_y': .5}
        md_bg_color: 1, 170/255, 23/255, 1
    MDLabel:
        text: 'Task1'
        markup: True
        font_size: '20sp'
        size_hint_x: .8
        pos_hint: {'center_x': .46, 'center_y': .8}
    MDCheckbox:
        size_hint: None, None
        size: '48dp', '48dp'
        unselected_color: 1, 170/255, 23/255, 1
        selected_color: 1, 179/255, 0, 1
        pos_hint: {'center_x': .95, 'center_y': .8}
        on_active: app.on_complete()
    MDLabel:
        id: description
        text: 'Buing fruits'
        markup: True
        font_size: '20sp'
        size_hint_x: .9
        line_height: .8
        pos_hint: {'center_x': .51, 'center_y': .4}


MDScreen:
    date: date
    name: 'main'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text: 'My Tasks'
            font_size: '35sp'
            pos_hint: {'center_x': .56, 'center_y': .95}
        MDLabel:
            id: date
            text: ''
            font_size: '18sp'
            pos_hint: {'center_x': .565, 'center_y': .89}
        MDIconButton:
            icon: 'plus'
            pos_hint: {'center_x': .89, 'center_y': .925}
            user_font_size: '35sp'
            md_bg_color: 1, 170/255, 23/255, 1
            text_color: 1, 1, 1, 1
            #theme_text_color: 'Custom'
            #on_relese: app.add_todo()
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .85
            pos_hint: {'center_x': .5, 'y': 0}
            bar_width: 0
